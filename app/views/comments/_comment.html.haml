%table.table.table-striped
  %tbody
    - comments.each do |comment|
      %tr
        %td
          %h4
            =comment.content
          %p
            ="Created " + time_ago_in_words(comment.created_at) + ", by " + comment.user.name
            -if current_user
              -if comment.user_id == current_user.id
                =link_to (fa_icon "trash"), movie_comment_path(comment.movie, comment), method: :delete,  data: { confirm: 'Are you sure?' }
